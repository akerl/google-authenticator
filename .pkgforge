name 'google-authenticator'
org 'amylum'

deps(
  pam: {
    version: '1.3.0-45',
    checksum: '15de19e66bebf15fd453769c93342318818cf8e0b14bddd207ba188a7f5e4066'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

build do
  run './bootstrap.sh'
  configure
  make
  install
end

test do
  run 'google-authenticator --help'
end
