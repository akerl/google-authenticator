name 'google-authenticator'
org 'amylum'

deps(
  pam: {
    version: '1.3.0-51',
    checksum: '7a83c48ab37dd86bcc173c3847813753ed973ae2ca6fe5cb694de1c921e881b8'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

build do
  run './bootstrap.sh'
  configure
  make
  install
end

test do
  run 'google-authenticator --help'
end
