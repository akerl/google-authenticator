name 'google-authenticator'
org 'amylum'

deps(
  pam: {
    version: '1.3.0-31',
    checksum: '54acfbca512e68b519712588532f993cea0669a5f0957ccfeb9810a4200ad823'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

build do
  run './bootstrap.sh'
  configure
  make
  install
end

test do
  run 'google-authenticator --help'
end
