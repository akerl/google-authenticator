name 'google-authenticator'
org 'amylum'

deps(
  pam: {
    version: '1.3.0-47',
    checksum: '8756e2e0b2634bcad1533c44e645f155cd47f53ed68de4dcf19a10b6406030eb'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

build do
  run './bootstrap.sh'
  configure
  make
  install
end

test do
  run 'google-authenticator --help'
end
