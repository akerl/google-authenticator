name 'google-authenticator'
org 'amylum'

deps(
  pam: {
    version: '1.3.0-32',
    checksum: 'd0ed9783eb189bc34286596b6503c2982ac35145159452dd25131b40f45d312a'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

build do
  run './bootstrap.sh'
  configure
  make
  install
end

test do
  run 'google-authenticator --help'
end
