name 'google-authenticator'
org 'amylum'

deps(
  pam: {
    version: '1.3.0-37',
    checksum: 'cb1cf04afdf6ba5c6dc9b505a0e861091c4655672be4ab7be7b2841fabd5a7d8'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

build do
  run './bootstrap.sh'
  configure
  make
  install
end

test do
  run 'google-authenticator --help'
end
