name 'google-authenticator'
org 'amylum'

deps(
  pam: {
    version: '1.3.0-39',
    checksum: '173e19de1b39c79cf04228782503b7152696940c426021098b8fb864e80b45f5'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

build do
  run './bootstrap.sh'
  configure
  make
  install
end

test do
  run 'google-authenticator --help'
end
