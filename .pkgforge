name 'google-authenticator'
org 'amylum'

deps(
  pam: {
    version: '1.3.0-49',
    checksum: '21cda7eb2d1ed2d5d239e5384b6f410ab6cb591f40f8013104a2b81c2adf48fd'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

build do
  run './bootstrap.sh'
  configure
  make
  install
end

test do
  run 'google-authenticator --help'
end
