name 'google-authenticator'
org 'amylum'

deps(
  pam: {
    version: '1.3.0-30',
    checksum: '61890dc0476c031f66c20babdabc1cf1f278ff2d1611c355c7b7b25960127215'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

build do
  run './bootstrap.sh'
  configure
  make
  install
end

test do
  run 'google-authenticator --help'
end
