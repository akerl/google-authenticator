name 'google-authenticator'
org 'amylum'

deps(
  pam: {
    version: '1.3.0-40',
    checksum: '83da3cd19939cad6403248bffc8d80b5ed2188857135179dfbb8dc67387017b0'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

build do
  run './bootstrap.sh'
  configure
  make
  install
end

test do
  run 'google-authenticator --help'
end
