name 'google-authenticator'
org 'amylum'

deps(
  pam: {
    version: '1.3.0-33',
    checksum: '67fb7ba6dceaa974aca3b7398b5574bd4a7c44d08bfe1d17a06c07c70f8dfd3d'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

build do
  run './bootstrap.sh'
  configure
  make
  install
end

test do
  run 'google-authenticator --help'
end
