name 'google-authenticator'
org 'amylum'

deps(
  pam: {
    version: '1.3.0-44',
    checksum: '3bf796352a7697599c56bbb7e475d560df893ae5555d5bfc4316b3550cec76e7'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

build do
  run './bootstrap.sh'
  configure
  make
  install
end

test do
  run 'google-authenticator --help'
end
