name 'google-authenticator'
org 'amylum'

deps(
  pam: {
    version: '1.3.0-34',
    checksum: '7e32ac4b9f774eec250297a12877b21bf272f0a69bcc1eb9577ba43a72340751'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

build do
  run './bootstrap.sh'
  configure
  make
  install
end

test do
  run 'google-authenticator --help'
end
