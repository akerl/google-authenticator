name 'google-authenticator'
org 'amylum'

deps(
  pam: {
    version: '1.3.0-48',
    checksum: 'a3b4f7a9aa749692299f076182306ed1149dffa2547d5bff2d9095e75a0fb262'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

build do
  run './bootstrap.sh'
  configure
  make
  install
end

test do
  run 'google-authenticator --help'
end
