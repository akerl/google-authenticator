name 'google-authenticator'
org 'amylum'

deps(
  pam: {
    version: '1.3.0-43',
    checksum: '46f95d8c6582630e677b7c419635fc8a0013e70ed2a9e07edce7ae8807362611'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

build do
  run './bootstrap.sh'
  configure
  make
  install
end

test do
  run 'google-authenticator --help'
end
