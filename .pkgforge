name 'google-authenticator'
org 'amylum'

deps(
  pam: {
    version: '1.3.0-38',
    checksum: '34b7d13f5c06a1996699226d96104ada7504ec679f8cc597642dbfe9e8aa0d08'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

build do
  run './bootstrap.sh'
  configure
  make
  install
end

test do
  run 'google-authenticator --help'
end
