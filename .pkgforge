name 'google-authenticator'
org 'amylum'

deps(
  pam: {
    version: '1.3.0-42',
    checksum: '0223ee13b61c8dd13b5782aa68809105a66733a61dcdfb0330783dfb60866a19'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

build do
  run './bootstrap.sh'
  configure
  make
  install
end

test do
  run 'google-authenticator --help'
end
